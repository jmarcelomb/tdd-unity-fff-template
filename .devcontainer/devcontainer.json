{
	"name": "tdd-unity-fff-template",
	"build": {
		"context": "..",
		"dockerfile": "Dockerfile.dev"
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"customizations": {
		"vscode": {
			"files.trimTrailingWhitespace": true,
			"extensions": [
				"ms-vscode.cmake-tools",
				"llvm-vs-code-extensions.vscode-clangd",
				"fpopescu.vscode-unity-test-adapter",
				"vadimcn.vscode-lldb"
			]
		}
	}
}